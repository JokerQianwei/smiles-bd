{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "module": "smiles_bd.train",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",        
            "args": [
                "--config",
                "./configs/default.yaml"
                // "--override"
            ]
        },
        {
            "name": "sample",
            "type": "debugpy",
            "request": "launch",
            "module": "smiles_bd.sample",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",        
            "args": [
                "--config", "./configs/default.yaml",
                "--ckpt", "./checkpoints/model.pt",
                "--override", "sample.steps=32", "sample.top_p=0.9",
                "--prefix", "C1=CC=CC=C1"
            ]
        }
    ]
}
